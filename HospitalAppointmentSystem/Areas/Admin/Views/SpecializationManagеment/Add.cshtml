@model AddSpecializationViewModel

@{
    ViewData["Title"] = "Добави специалност";
}

<h2 class="mb-4 text-center">Добави нова специалност</h2>

<form asp-action="Add" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Добави</button>
        <a asp-action="AllSpecializations" class="btn btn-outline-secondary ms-2">Назад</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
